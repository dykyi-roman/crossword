<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

        .topnav a:hover {
            background-color: #ddd;
            color: black;
        }

        .topnav a.label-player {
            background-color: #4CAF50;
            color: white;
        }

        .topnav a.label-level {
            background-color: #4c75af;
            color: white;
        }

        .crossword table {
            text-align: center;
        }

        .cell td {
            width: 40px;
            height: 40px;
        }

        .letterData {
            border: 2px solid #000;
        }

        input {
            width: 30px;
            height: 30px;
            font-size: 14px;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <title>Play page</title>
</head>
<body>
<div class="topnav">
    <a class="label-player">Player: {{ player.nickname }}</a>
    <a class="label-level">Level: {{ player.level }}</a>
    <a href="{{ path('web.game.play.view') }}">New</a>
    <a href="#" id="check">Check</a>
</div>
<table class="crossword">
    {% for cell in game.grid %}
        {% if cell['coordinate']['y'] == 1 %}
            <tr>
        {% endif %}

        {% if cell['letter'] == '' %}
            <td class="cell"></td>
        {% else %}
            <td class="letterData cell">
                <input
                        size="1"
                        maxlength="1"
                        data-index="{{ cell['index'] }}"
                        data-letter="{{ cell['letter']|base64 }}"
                        placeholder="{% if cell['number'] is defined %} {{ cell['number'] }} {% endif %}"
                        value=""
                >
            </td>
        {% endif %}

        {% if cell['coordinate']['y'] == game.size %}
            </tr>
        {% endif %}
    {% endfor %}
</table>
<hr>
<table>
    {% for number, definition in game.definitions %}
        <tr>
            <td>{{ number + 1 }}</td>
            <td>{{ definition }}</td>
        </tr>
    {% endfor %}
</table>

<script>
    $(document).on("click", "#check", function () {
        let answer = [];
        $("input").each(function () {
            answer.push({'index': $(this).data('index'), 'letter': $(this).data('letter'), 'value': $(this).val()});
        });

        $.ajax({
            url: "{{ path('web.game.check.post') }}",
            type: 'POST',
            data:  JSON.stringify(answer),
            dataType: "json",
            contentType: "application/json",
            success: function (data) {
                console.info(data);
            },
            error: (error) => {
                console.log(error.responseJSON.error);
            }
        });
    });
</script>
</body>
</html>